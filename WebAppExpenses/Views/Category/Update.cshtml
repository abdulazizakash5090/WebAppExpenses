@model WebAppExpenses.Models.UpdateCategoryModel
@{
    ViewData["Title"] = "Update";
}


<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center text-primary">Update Category</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="Create">
                        <div class="form-group">
                            @*    <label for="" class="form-label">Id</label>*@
                            <input type="hidden" class="form-control" asp-for="Id" readonly />
                        </div>
                        <div class="form-group">
                            <label for="" class="form-label">Name</label>
                            <input type="text" class="form-control" asp-for="Name" />
                        </div>
                        <div class="form-group">
                            <label for="" class="form-label">Amount</label>
                            <input type="number" class="form-control" asp-for="Amount" />
                        </div>
                        <div class="form-group">
                            <label for="" class="form-label">From Date</label>
                            <input type="date" class="form-control" asp-for="FromDate" />
                        </div>

                        <div class="form-group">
                            <label for="" class="form-label">To Date</label>
                            <input type="date" class="form-control" asp-for="ToDate" />
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a class="btn btn-success m-2" asp-controller="Category" asp-action="Index">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
