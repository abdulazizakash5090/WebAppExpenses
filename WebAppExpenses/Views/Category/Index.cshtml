@model List<WebAppExpenses.Models.Domain.Category>
@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center text-primary">Category List</h1>
<div class="container">
<div class="row">
    <div class="col-md-8 offset-md-2">
@*        <button type="button" class="btn btn-success" asp-controller="Category" asp-action="Create">Create</button>*@
        <a class="btn btn-success m-2" asp-controller="Category" asp-action="Create">Create</a>

        <table class="table table-hover">
    <thead>
            <tr class="table-active">
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">From Date</th>
                    <th scope="col">ToDate</th>
                 <th></th>
                <th>Action</th>
            </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Amount</td>
                <td>@category.FromDate.ToString("dd-MM-yyyy")</td>
                <td>@category.ToDate.ToString("dd-MM-yyyy")</td>
                 <td><a class="btn btn-success" href="Category/Update/@category.Id">Update</a></td>
    @*            <td><button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Category">Delete</button></td>*@
@*                <td><a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>*@
              @*  <td><a class="btn btn-danger"  id="@category.Id">Delete</a></td>*@
    @*            <td><button type="button" class="btn btn-danger" value="@category.Id">Delete</button></td>*@
                @* <td><a class="btn btn-danger" title="Delete" href="javascript:deleteFunction(@category.Id)">Delete</a></td>*@
                <td>
                    <form asp-action="Delete" asp-route-id="@category.Id">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure to delete this record?')">
                            <i class="far fa-trash-alt"></i>Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>


</table>
    </div>
</div>
</div>

